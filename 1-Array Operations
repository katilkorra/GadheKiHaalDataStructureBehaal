#include <stdio.h>
#include <string.h>

// Structure to hold student information
struct Student {
    char name[50];
    int rollNumber;
    float marks;
};

// Function to input student information
void inputStudentInfo(struct Student *s) {
    printf("Enter name: ");
    scanf(" %[^\n]", s->name);  // Using " %[^\n]" to allow spaces in the name
    printf("Enter roll number: ");
    scanf("%d", &s->rollNumber);
    printf("Enter marks: ");
    scanf("%f", &s->marks);
}

// Function to display student information
void displayStudentInfo(struct Student *s) {
    printf("\nName: %s", s->name);
    printf("\nRoll Number: %d", s->rollNumber);
    printf("\nMarks: %.2f\n", s->marks);
}

int main() {
    struct Student students[5]; // Array of 5 students
    int choice, i;

    do {
        printf("\nMenu:\n");
        printf("1. Enter student information\n");
        printf("2. Display student information\n");
        printf("3. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                for (i = 0; i < 5; i++) {
                    printf("\nEntering information for student %d\n", i + 1);
                    inputStudentInfo(&students[i]);
                }
                break;
            case 2:
                for (i = 0; i < 5; i++) {
                    printf("\nDisplaying information for student %d\n", i + 1);
                    displayStudentInfo(&students[i]);
                }
                break;
            case 3:
                printf("Exiting...\n");
                break;
            default:
                printf("Invalid choice! Please enter again.\n");
        }
    } while (choice != 3);

    return 0;
}
